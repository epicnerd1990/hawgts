{
  "devicetype1": {                           // Device category
    "name": "Device Name",                   // e.g., "Room Light Controls"
    "type": "devicetype",                    // light, climate, etc.
    "page": "#",                             // 0 = no paging; 1 = use pages (page1, page2, …)
    "style": {
        "icon": "icon_name",
        "box1_size": "#",                    // 1 = 
        "row_count": "#",                    // 1 = 
        "device_icon_pos": "#",              // 1 = Normal, 2 = Box 1?
        "device_count": "#"                  // 1 = 
    },

    // List of controls available for use by widget

    // if page = 0, no "page" object
  "page#": {},
    "controllist": {                         // "controllist" is actual title of this object, not a filler
      "controlnamea": {
        "icon": "control_icon",
        "type": "action,page",      // all - "action" or "page"
        "stateon": "#>#,on,off,page#",       // all - devicestate that indicates device is on
        "action": "light,on,off,toggle,template",     // action - indicate which action to run when run
        "entity": "entity_id",               // action - which enitity to control
        "cmd1": "brightness",                // action - 
        "data1": "page#,{hatemplate}"        // page#,template - data used for page changing and HA Templates
      },
      "controlnameb": {
      }
    },

    // Locations of the controls on the widget
  "box_1": {
    "row_1": {
      "0": "controlname",
      "1": "..."
    },
    "row_2": {
      "0": "controlname",
      "1": "..."
    }
  },
  "box_2": {
    "row_1": {
      "0": "controlname",
      "1": "..."
    },
    "row_2": {
      "0": "controlname",
      "1": "..."
    }
  }
},

